<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('navbar') %>
    <div class="container">
      <div><a href="/doc">Create Doc</a></div>
      <h2>Last 10 Documents</h2>
      <ul>
        <% recentDocs.forEach(doc => { %>
        <li><%= doc.title %> - Created on <%= new Date(doc.created_at).toLocaleDateString() %></li>
        <% }); %>
      </ul>
    </div>
    <%- include('footer') %>
  </body>
</html>
